<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="FlatButton">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextSmall" parent="TextAppearance.AppCompat.Body1" />

    <style name="TextSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextSmall.White">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextSmall.Light">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextSmaller" parent="TextSmall">
        <item name="android:textSize">@dimen/smaller_text_size</item>
    </style>

    <style name="TextSmaller.Light">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextSmall.Monospace">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium.White">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextLabel" parent="TextMedium.Bold">
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="TextNormal" parent="@style/TextAppearance.AppCompat.Body1" />

    <style name="TextNormal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextClock">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/clock_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextClock.Light" parent="@style/TextClock">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextClock.Light.Tenths" parent="@style/TextClock.Light">
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:textSize">@dimen/clock_tenths_text_size</item>
    </style>

    <style name="DrawerMenuText" parent="@style/TextSmall.Bold">
        <item name="android:textSize">@dimen/navdrawer_text_size</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Widget.Flightintel.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ActionBarThemeOverlay</item>
        <item name="popupTheme">@style/ActionBarPopupThemeOverlay</item>
    </style>

    <style name="Widget.FlightIntel.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Widget.FlightIntel.Spinner" parent="Widget.FlightIntel.Spinner.Base" />

    <style name="TabIndicator" />

    <style name="ActionDropDownStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/color_primary</item>
    </style>

</resources>
