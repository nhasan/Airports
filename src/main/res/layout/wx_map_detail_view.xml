<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/wx_content_layout"
            android:orientation="vertical"
            android:padding="@dimen/item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/wx_map_type_label"
                style="@style/TextLabel"
                android:text="@string/select_type"
                android:visibility="gone"
                android:paddingBottom="@dimen/label_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/wx_map_type_layout"
                android:background="@drawable/rounded_rectangle"
                android:visibility="gone"
                android:padding="@dimen/item_padding"
                android:layout_marginBottom="@dimen/section_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Spinner android:id="@+id/map_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@+id/wx_map_label"
                style="@style/TextLabel"
                android:paddingBottom="@dimen/label_padding"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/wx_map_layout"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/help_text"
                android:visibility="gone"
                android:layout_marginTop="@dimen/section_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
