<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:gravity="start|center_vertical"
        style="@style/ListItemActivated"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navdrawer_item_height">
    <ImageView android:id="@+id/item_icon"
            android:tint="@color/drawer_item_icon_color"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_marginRight="32dp"
               tools:ignore="ContentDescription"/>
    <TextView android:id="@+id/item_text"
            style="@style/DrawerMenuText"
            android:textColor="@color/drawer_item_text_color"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
</LinearLayout>
