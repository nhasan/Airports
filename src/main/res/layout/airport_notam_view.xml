<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/main_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/airport_title_layout" />
        <LinearLayout
                android:id="@+id/notam_content_layout"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/notam_title1"
                      style="@style/TextSmall"
                      android:gravity="center_horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/notam_title2"
                      style="@style/TextSmall.Light"
                      android:gravity="center_horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
