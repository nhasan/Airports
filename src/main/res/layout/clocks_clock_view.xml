<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/utc_time_label"
                android:text="@string/utc_time"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/utc_time_value"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/utc_date_value"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@+id/local_time_label"
                android:text="@string/local_time"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/local_time_value"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/local_date_value"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@+id/home_time_label"
                android:text="@string/home_time"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/home_time_layout"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/home_time_value"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/home_date_value"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
