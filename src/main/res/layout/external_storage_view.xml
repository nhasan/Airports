<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/activity_top_layout"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView android:id="@+id/storage_desc_label"
                style="@style/TextSmall.Bold"
                android:text="@string/sd_card_monitor"
                android:padding="6dp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/storage_desc_text"
                style="@style/TextSmall"
                android:padding="6dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/storage_status_text"
                android:background="@drawable/rounded_rectangle"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/storage_desc_text2"
                style="@style/TextSmall.Bold"
                android:padding="6dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        <Button android:id="@+id/btn_trynow"
                style="@style/FlatButton"
                android:text="@string/try_now"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
</androidx.core.widget.NestedScrollView>
