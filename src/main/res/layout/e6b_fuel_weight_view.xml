<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/e6b_label"
                style="@style/TextLabel"
                android:padding="@dimen/label_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TableLayout
                android:background="@drawable/rounded_rectangle"
                android:stretchColumns="0,1"
                android:padding="@dimen/item_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        style="@style/TextMedium"
                        android:text="@string/fuel_type"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:paddingBottom="@dimen/item_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner android:id="@+id/e6b_fuel_types"
                        android:layout_marginTop="-6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        style="@style/TextMedium"
                        android:text="@string/total_fuel"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:paddingBottom="@dimen/item_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText android:id="@+id/e6b_edit_total_fuel"
                        style="@style/TextSmall"
                        android:inputType="numberDecimal"
                        android:hint="@string/input_gal"
                        android:layout_marginTop="-6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        style="@style/TextMedium"
                        android:text="@string/total_weight"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                    android:paddingBottom="@dimen/item_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText android:id="@+id/e6b_edit_total_weight"
                        style="@style/TextSmall.Bold"
                        android:inputType="none"
                        android:hint="@string/lbs"
                        android:layout_marginTop="-6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
        <TextView android:id="@+id/e6b_msg"
                android:textIsSelectable="false"
                android:gravity="center"
                android:padding="@dimen/item_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
